<p id="notice"><%= notice %></p>

<h1>Listing pictures</h1>

<table class="gallery" data-gallery="hongkong">
  <thead>
    <tr>
      <th>Title</th>
      <!-- <!th>Url</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr class="thumbs">
        <td><%= picture.title %></td>
        <td>
          <%= link_to "", picture.url, title: picture.title,
            style: "background-image:url('#{picture.url}'" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
